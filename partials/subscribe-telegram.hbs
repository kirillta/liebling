{{!--
This subscribe template is used to display the button where users can subscribe on a Telegram channel.
--}}
<section class="m-subscribe-section js-newsletter">
  <div class="l-wrapper in-post">
    <div class="m-subscribe-section__content">
      <div class="m-subscribe-section__text">
        <h4 class="m-subscribe-section__title">{{t "Subscribe to our Telegram channel"}}</h4>
        <p class="m-subscribe-section__description">
          {{t "Join to discuss the pub in our chat!"}}
        </p>
      </div>
      <div class="m-subscribe-section__form">
        <a href="https://t.me/pubsofoldrus" class="m-button primary block" target="_blank" rel="noopener">{{t "Join"}}</a>
      </div>
    </div>
  </div>
</section>